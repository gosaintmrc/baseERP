<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gosaint.dao.permissionManagement.RolesDao">
    
    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.gosaint.model.permissionManagement.Roles">
        <result column="role_id" property="roleId"/>
        <result column="role_name" property="roleName"/>
        <result column="description" property="description"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <!-- 插入角色 -->
    <insert id="insert" parameterType="com.gosaint.model.permissionManagement.Roles">
        INSERT INTO roles (
            role_id, 
            role_name, 
            description, 
            created_at
        ) VALUES (
            #{roleId}, 
            #{roleName}, 
            #{description}, 
            #{createdAt}
        )
    </insert>

    <!-- 根据ID查询角色 -->
    <select id="selectById" parameterType="String" resultMap="BaseResultMap">
        SELECT * FROM roles WHERE role_id = #{roleId}
    </select>

    <!-- 根据角色名称查询角色 -->
    <select id="selectByName" parameterType="String" resultMap="BaseResultMap">
        SELECT * FROM roles WHERE role_name = #{roleName}
    </select>

    <!-- 查询所有角色 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM roles
    </select>

    <!-- 更新角色 -->
    <update id="update" parameterType="com.gosaint.model.permissionManagement.Roles">
        UPDATE roles
        SET 
            role_name = #{roleName},
            description = #{description}
        WHERE role_id = #{roleId}
    </update>

    <!-- 删除角色 -->
    <delete id="delete" parameterType="String">
        DELETE FROM roles WHERE role_id = #{roleId}
    </delete>
</mapper>