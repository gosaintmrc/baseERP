<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gosaint.dao.permissionManagement.PermissionsDao">
    
    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.gosaint.model.permissionManagement.Permissions">
        <result column="permission_id" property="permissionId"/>
        <result column="permission_name" property="permissionName"/>
        <result column="description" property="description"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <!-- 插入权限 -->
    <insert id="insert" parameterType="com.gosaint.model.permissionManagement.Permissions">
        INSERT INTO permissions (
            permission_id, 
            permission_name, 
            description, 
            created_at
        ) VALUES (
            #{permissionId}, 
            #{permissionName}, 
            #{description}, 
            #{createdAt}
        )
    </insert>

    <!-- 根据ID查询权限 -->
    <select id="selectById" parameterType="String" resultMap="BaseResultMap">
        SELECT * FROM permissions WHERE permission_id = #{permissionId}
    </select>

    <!-- 根据权限名称查询权限 -->
    <select id="selectByName" parameterType="String" resultMap="BaseResultMap">
        SELECT * FROM permissions WHERE permission_name = #{permissionName}
    </select>

    <!-- 查询所有权限 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM permissions
    </select>

    <!-- 更新权限 -->
    <update id="update" parameterType="com.gosaint.model.permissionManagement.Permissions">
        UPDATE permissions
        SET 
            permission_name = #{permissionName},
            description = #{description}
        WHERE permission_id = #{permissionId}
    </update>

    <!-- 删除权限 -->
    <delete id="delete" parameterType="String">
        DELETE FROM permissions WHERE permission_id = #{permissionId}
    </delete>
</mapper>