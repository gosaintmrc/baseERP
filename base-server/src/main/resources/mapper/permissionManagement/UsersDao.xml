<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gosaint.dao.permissionManagement.UsersDao">
    
    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.gosaint.model.permissionManagement.Users">
        <result column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="email" property="email"/>
        <result column="full_name" property="fullName"/>
        <result column="is_active" property="isActive"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.gosaint.model.permissionManagement.Users">
        INSERT INTO users (
            username, 
            password_hash, 
            email, 
            full_name, 
            is_active, 
            created_at
        ) VALUES (
            #{username}, 
            #{passwordHash}, 
            #{email}, 
            #{fullName}, 
            #{isActive}, 
            #{createdAt}
        )
    </insert>

    <!-- 根据ID查询用户 -->
    <select id="selectById" parameterType="String" resultMap="BaseResultMap">
        SELECT * FROM users WHERE user_id = #{userId}
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" parameterType="String" resultMap="BaseResultMap">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <!-- 查询所有用户 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM users
    </select>

    <select id="selectAndRolesAll" resultType="com.gosaint.model.vo.UsersVO">
        select u.*,r.role_name,r.role_id,r.description from users u left join user_roles ur on u.user_id =ur.user_id left join roles r on ur.role_id =r.role_id
    </select>

    <!-- 更新用户 -->
    <update id="update" parameterType="com.gosaint.model.permissionManagement.Users">
        UPDATE users
        SET
        <if test="username != null">username = #{username},</if>
        <if test="passwordHash != null">password_hash = #{passwordHash},</if>
        <if test="email != null">email = #{email},</if>
        <if test="fullName != null">full_name = #{fullName},</if>
        <if test="isActive != null">is_active = #{isActive}</if>
        WHERE user_id = #{userId}
    </update>

    <!-- 删除用户 -->
    <delete id="delete" parameterType="String">
        DELETE FROM users WHERE user_id = #{userId}
    </delete>
</mapper>